@section Scripts{
    <script>
        (function ($) {
            var dt = {};

            $(function () {
                dt = $("#example1")
                    .DataTable({
                        dom: '<"row"<"col-sm-6"l><"col-sm-3"<"#addNew">><"col-sm-3"f>><"row"t><"row"<"col-sm-6"i><"col-sm-6"p>>',//dom结构
                        ajax: {
                            type: 'POST',
                            url: coreweb.servicesUrl + '/api/Department/GetDepartmentsByPage',
                            data: function (d) { //传出的转换  解耦啦
                                console.log(d);
                                return { start: d.start, length: d.length, search: d.search.value };
                            },
                            dataSrc: function (json) {
                                return json.data;
                            },
                            dataFilter: function (data) { //终于找到你了 服务器返回数据的处理转换
                                console.log(data);
                                var json = jQuery.parseJSON(data);
                                console.log(json);
                                return JSON.stringify(json);
                            }
                        },
                        serverSide: true,
                        order: [[0, 'desc'], [1, 'desc']], //排序
                        columnDefs: [
                            {
                                targets: [-1],
                                orderable: false,
                                searchable: false
                            }
                        ],
                        columns: [
                            { data: "departmentID", name: '你好' },
                            { data: "name" },
                            { data: 'groupName' },
                            { data: 'modifiedDate' },
                            {
                                data: "departmentID",
                                render: function (data, type, row, meta) {
                                    return '<a href="#"  data-toggle="modal" data-target="#myModal" data-whatever="' +
                                        data +
                                        '">更新</a>/<a href="#"  data-toggle="modal" data-target="#myDeleteModal" data-whatever="' +
                                            data +
                                            '">删除</a>';
                                }
                            }
                        ]
                    });
                $("#addNew").html('<a href="#" data-toggle="modal" data-target="#addNewModal" class="pull-right">添加</button>');
            });

            $(function () {
                $('#myModal')
                    .on('show.bs.modal',
                        function (event) {
                            var id = $(event.relatedTarget).data('whatever');

                            $.ajax({
                                type: 'POST',
                                url: coreweb.servicesUrl + '/api/Department/GetGroups',
                                success: function (data) {
                                    for (var i = 0; i < data.length; i++) {
                                        $('#groups').append('<option>' + data[i].groupName + '</option>');
                                    }
                                    $.ajax({
                                        type: 'GET',
                                        url: coreweb.servicesUrl + '/api/Department/GetDepartmentById?departmentId=' + id,
                                        success: function (data) {
                                            $("#Name").val(data.name);
                                            $("#groups option")
                                                .each(function (index, ele) {
                                                    if ($(ele).val() == data.groupName) {
                                                        $(ele).style('class', 'active');
                                                    }
                                                });
                                        }
                                    });
                                }
                            });
                        });

            });

            $(function () {
                $('#myDeleteModal')
                    .on('show.bs.modal',
                        function (event) {
                            $('#deleteBtn')
                                .click(function () {
                                    var id = $(event.relatedTarget).data('whatever');
                                    $.ajax({
                                        type: 'GET',
                                        url: coreweb.servicesUrl + '/api/Department/DeleteDepartmentById?departmentId=' + id,
                                        success: function (data) {
                                            $('#myDeleteModal').modal('hide');
                                            dt.ajax.reload();
                                        }
                                    });
                                });
                        });

            });

        })($);
    </script>
}